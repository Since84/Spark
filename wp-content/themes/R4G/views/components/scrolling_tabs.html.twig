<section class="spark-gallery scrolling-tabs {{ spark_class }}">
	{% if header %}<h2>{{ header }}</h2>{% endif %}
	<ul class="tabs">
	{% for slide in post.get_field( slide_field ) %}
		{% include tab_template %}
	{% endfor %}
	</ul>
</section>
<section class="tab-content">
	<ul>
		{# {{ dump(post.get_field('issue_area')) }} #}
	{% for slide in post.get_field('issue_area') %}
		{% include content_template %}
	{% endfor %}
	</ul>
	<ul class="tab-pager">
		<li class="prev">< Previous Issue</li>
		<li class="next">Next Issue ></li>
	</ul>
</section>