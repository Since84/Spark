	<ul class="slides">
	{% for slide in feed %}
		{% include slide_template %}
		{% if ( more == true ) and ( loop.length > 3 ) and ( loop.last )  %}
			<span class="load-more"></span>
		{% endif %}
	{% endfor %}
	</ul>
</section>