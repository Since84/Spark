<li class="post-preview">
	<a class="content">
		<div class="video" style="background-image:url( 'http://img.youtube.com/vi/{{ slide.post_video_id }}/default.jpg' );">
			<object data="http://www.youtube.com/embed/{{ slide.post_video_id }}"
   width="300" height="220"></object>
		</div>
		<div class="post-text">
			<h4>{{ slide.post_title }}</h4>
			<p>{{ slide.content }}</p>
		</div>
	</a> 
</li>