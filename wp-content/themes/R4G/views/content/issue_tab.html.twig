{% if loop.index%3 == 1 %}
	<ul class="tab-group slide">
{% endif %} 
	<li class="tab issue-area" style="background-image:url( '{{ slide.image.url }}' );" tab-index="{{ loop.index%3 }}"> 
		<section class="slide-content">
			<h4>{{ slide.heading }}</h4>
			<div>{{ slide.caption }}</div>
		</section>
	</li>
{% if ( loop.index%3 == 3 ) or ( loop.last ) %}
	</ul>
{% endif %} 