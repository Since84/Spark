<footer class="spark_region">
	<section class="footer-heading">
		<h2>{{ header.heading }}</h2>
		<h4>{{ header.sub_heading }}</h4>
	</section>
	<div class="footer-content">
		<ul class="container">
			<li class="twitter">{{ twitter }}</li>
			<li class="petition">{{ petition }}</li>
			<li class="newsletter">
				<h2>Stay Informed</h2>
				<span>Get all the latest policy updates by signing up for our quarterly newsletter</span>
				{{ newsletter }}
			</li>
		</ul>
	</div>
	<section class="footer-contact">
		<div class="footer-action">
			<a class="logo" href="{{ site.url }}"></a>
			{{ contact_menu }}
		</div>
		<div class="footer-social">
			<h3>Stay Connected</h3>
			{{ social_menu }}
		</div>
	</section>
	<section class="footer-bottom">
		<div class="container">
			<span class="copyright">&copy; {{site.name }} </span>
			<span class="designed by">{% include '/views/plugs/elefint.html.twig' %}</span>
		</div>
	</section>
</footer>