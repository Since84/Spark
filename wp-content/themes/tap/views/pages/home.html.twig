<header>
	<a href="{{site.url}}">
		<img src={{header_image}}><br>
		<h1>{{site.title}}</h1><br>
		<h2>{{site.description}}</h2>
	</a>
</header>

{{nav}}

<footer>
	<ul>
	{% for location in locations %}
		<li class="location">
			<div class="address">
				<p>{{location.city}}</p>
				<p>{{location.address}}</p>
				<P>{{location.address2}}</P>
			</div>
			<ul class="contact">
			<li>
				<a href="{{location.email}}">Email</a>
			</li>
			<li>
				<a href="{{location.phone}}">Phone</a>
			</li>
			</ul>
			
		</li>
	{% endfor %}	
	</ul>
</footer>